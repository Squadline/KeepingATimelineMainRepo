<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryDark">@color/appSecondary</item>
        <item name="colorAccent">@color/appAccent</item>
    </style>

    <style name="AppTheme.LoginPage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryDark">@color/appSecondary</item>
        <item name="colorAccent">@color/appAccent</item>
        <item name="android:statusBarColor">@color/appSecondary</item>
    </style>

    <style name="AppTheme.RegistrationPage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryDark">@color/appSecondary</item>
        <item name="colorAccent">@color/appAccent</item>
        <item name="android:statusBarColor">@color/appSecondary</item>
    </style>

    <style name="AppTheme.MainScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryDark">@color/appSecondary</item>
        <item name="colorAccent">@color/appAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ViewTimeline" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryDark">@color/appSecondary</item>
        <item name="colorAccent">@color/appAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.TimelineSettings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryDark">@color/appSecondary</item>
        <item name="colorAccent">@color/appAccent</item>
        <item name="android:statusBarColor">@color/appSecondary</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.AddEvent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryDark">@color/appSecondary</item>
        <item name="colorAccent">@color/appAccent</item>
        <item name="android:statusBarColor">@color/appSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
