<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/addEventPrimary">

    <LinearLayout
        android:id="@+id/addPhotoEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/addEventPrimary"
        android:orientation="vertical">

        <EditText
            android:id="@+id/photoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:background="@color/white"
            android:hint="Title"
            android:inputType="textNoSuggestions"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:background="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/photoDate"
                style="?android:attr/editTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="3dp"
                android:layout_toStartOf="@+id/datePhotoInput"
                android:background="@color/white"
                android:gravity="start"
                android:clickable="true"
                android:padding="10dp"
                android:text="Date" />

            <TextView
                android:id="@+id/datePhotoInput"
                style="?android:attr/editTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                android:background="@color/white"
                android:gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="10dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:background="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/photoFile"
            style="?android:attr/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/text_ripple"
            android:gravity="start"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:padding="10dp"
            android:text="Upload image" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:background="@color/black" />

        <EditText
            android:id="@+id/photoDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:background="@color/white"
            android:gravity="top|start"
            android:hint="Description"
            android:inputType="textMultiLine|textNoSuggestions"
            android:lines="7"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:background="@color/black" />

    </LinearLayout>

</ScrollView>