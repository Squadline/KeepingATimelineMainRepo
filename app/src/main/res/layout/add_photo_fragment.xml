<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/photoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0.5dp"
            android:layout_marginStart="0.5dp"
            android:background="@color/white"
            android:hint="@string/eventTitle"
            android:inputType="textNoSuggestions"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginEnd="0.5dp"
            android:layout_marginStart="0.5dp"
            android:background="@color/grey500" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/photoDate"
                style="?android:attr/editTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0.5dp"
                android:layout_toStartOf="@+id/datePhotoInput"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="start"
                android:padding="10dp"
                android:text="@string/eventDate" />

            <TextView
                android:id="@+id/datePhotoInput"
                style="?android:attr/editTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0.5dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:gravity="end"
                android:padding="10dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/photoFile"
            style="?android:attr/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0.5dp"
            android:layout_marginStart="0.5dp"
            android:background="@drawable/text_ripple"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:gravity="start"
            android:padding="10dp"
            android:text="@string/eventPhoto" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginEnd="0.5dp"
            android:layout_marginStart="0.5dp"
            android:background="@color/grey500" />

        <EditText
            android:id="@+id/photoDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0.5dp"
            android:layout_marginStart="0.5dp"
            android:background="@color/white"
            android:gravity="top|start"
            android:hint="@string/eventDescription"
            android:inputType="textMultiLine|textNoSuggestions"
            android:lines="5"
            android:padding="10dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>