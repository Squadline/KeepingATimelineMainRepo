<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <TextView
        android:id="@+id/timelineTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Title"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/timelineFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timelineTitle"
        android:layout_below="@+id/timelineTitle"
        android:layout_marginBottom="16dp"
        android:text="Friends"
        android:textSize="14sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/recentEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/timelineTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="5/17/2016"
        android:textSize="14sp"
        android:textColor="#666666" />

</RelativeLayout>
