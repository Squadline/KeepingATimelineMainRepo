<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keepingatimeline.kat.AddEvent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/selectType"
        android:id="@+id/selection"
        android:textSize="26sp"
        android:textColor="#ff0000"
        android:singleLine="false"
        android:gravity="center_horizontal"
        android:textStyle="normal" />

    <RadioGroup
        android:id="@+id/eventType"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quoteRadio"
            android:id="@+id/radioQuote"
            android:checked="true"
            android:paddingEnd="20dp"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textRadio"
            android:id="@+id/radioText"
            android:checked="false"
            android:paddingEnd="20dp"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photoRadio"
            android:id="@+id/radioPhoto"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- This is the Photo Layout If User wants to input a Photo Event -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AddPhotoEvent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/title_field"
                        android:id="@+id/photo_title"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" />

                    <EditText android:id="@+id/photo_edit_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edit_message" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addPhotoButton"
                        android:id="@+id/importPhoto" />

                </LinearLayout>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/uploadedImage"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/description_field"
                        android:id="@+id/photo_description"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/photo_editText"
                        android:hint="@string/edit_message"
                        android:inputType="textMultiLine"
                        android:gravity="top|left" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/author"
                        android:id="@+id/photo_author"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/photo_authorField"
                        android:hint="@string/edit_message"
                        android:paddingBottom="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.59">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/date"
                        android:id="@+id/photo_date"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/photo_dateField"
                        android:hint="@string/enter_date"
                        android:paddingBottom="16dp" />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:text="@string/save_button"
                    android:id="@+id/savePhotoEvent"
                    android:layout_gravity="center_horizontal"
                    android:background="#1bd8db" />

            </LinearLayout>
        </ScrollView>

        <!-- This is the Quote Event Layout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/AddQuoteEvent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_field"
                    android:id="@+id/textView2"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText android:id="@+id/edit_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_message" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/quote_field"
                    android:id="@+id/text"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:id="@+id/editText"
                    android:hint="@string/edit_message"
                    android:inputType="textMultiLine"
                    android:gravity="top|left" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/speaker"
                    android:id="@+id/textView4"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/authorField"
                    android:hint="@string/edit_message" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/date"
                    android:id="@+id/date_field"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/Date"
                    android:hint="@string/enter_date" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="@string/save_button"
                android:id="@+id/SaveQuoteEvent"
                android:layout_gravity="center_horizontal"
                android:background="#1bd8db" />

        </LinearLayout>

        <!-- This is the Text Event Layout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/AddTextEvent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_field"
                    android:id="@+id/textTitle"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText android:id="@+id/text_edit_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_message" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_field"
                    android:id="@+id/text_field"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:id="@+id/text_edit_Text"
                    android:hint="@string/edit_message"
                    android:inputType="textMultiLine"
                    android:gravity="top|left" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/author"
                    android:id="@+id/text_author"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_authorField"
                    android:hint="@string/edit_message" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/date"
                    android:id="@id/date_field"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@id/Date"
                    android:hint="@string/enter_date" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="@string/save_button"
                android:id="@+id/SaveTextEvent"
                android:layout_gravity="center_horizontal"
                android:background="#1bd8db"
                android:layout_weight="0.02" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
