<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keepingatimeline.kat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.keepingatimeline.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainScreen"
            android:configChanges="orientation"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MainScreen">
            <intent-filter>
                <action android:name="com.keepingatimeline.kat.MainScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Timelineshower"
            android:configChanges="orientation"
            android:label="Timeline Shower"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="com.keepingatimeline.kat.Timelineshower" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TimelineSettings"
            android:configChanges="orientation"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TimelineSettings">
            <intent-filter>
                <action android:name="com.keepingatimeline.kat.TimelineSettings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddEvent"
            android:configChanges="orientation"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.AddEvent"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="com.keepingatimeline.kat.AddEvent" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationScreen"
            android:configChanges="orientation"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.RegistrationPage">
            <intent-filter>
                <action android:name="com.keepingatimeline.kat.RegistrationScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewTimeline"
            android:configChanges="orientation"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ViewTimeline">
            <intent-filter>
                <action android:name="com.keepingatimeline.kat.ViewTimeline" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecoverPassword"
            android:configChanges="orientation"
            android:label="Recover Password"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.keepingatimeline.kat.RecoverPasswordScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>